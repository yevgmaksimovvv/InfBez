# ========================================
# ВАЖНО: Скопируйте этот файл в .env и заполните реальными значениями!
# Никогда не коммитьте .env файл в git!
# ========================================

# JWT Configuration
# Сгенерируйте: openssl rand -hex 32
SECRET_KEY=

# JWT Algorithm (обычно HS256)
ALGORITHM=HS256

# Время жизни токена доступа (в минутах)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OTP Configuration
# Время жизни OTP кода (в минутах)
OTP_EXPIRE_MINUTES=5

# Database Configuration
# Формат: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/cybersecurity

# Redis Configuration (для production rate limiting)
# Формат: redis://host:port/database
REDIS_URL=redis://redis:6379/0
REDIS_ENABLED=false

# SMTP Configuration (для отправки OTP email)
# Оставьте пустым если не используете email OTP
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Master Key для шифрования RSA приватных ключей
# Сгенерируйте: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# КРИТИЧНО: Не теряйте этот ключ! Без него невозможно расшифровать сохраненные RSA ключи!
MASTER_KEY=

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS Configuration
# Список разрешенных origins через запятую
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Crypto Limits
# Максимальная длина текста для шифрования (в байтах)
MAX_TEXT_LENGTH=100000
MAX_KUZNECHIK_BLOCK=1000000
MAX_RSA_BLOCK=4090

# Максимальное количество RSA ключей на пользователя
MAX_RSA_KEYS_PER_USER=10
