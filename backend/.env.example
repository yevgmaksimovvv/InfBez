# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cybersecurity

# JWT Configuration
# Сгенерируйте безопасный секретный ключ для production (например, через: openssl rand -hex 32)
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# SMTP Configuration (для отправки OTP кодов на email)
# Для Gmail используйте:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# OAuth Configuration (Google)
# Получите в Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# OAuth Configuration (Yandex)
# Получите в Yandex OAuth: https://oauth.yandex.ru/
YANDEX_CLIENT_ID=
YANDEX_CLIENT_SECRET=
YANDEX_REDIRECT_URI=http://localhost:8000/auth/yandex/callback

# Frontend URL (для CORS)
FRONTEND_URL=http://localhost:3000
